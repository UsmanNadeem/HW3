-# This file is app/view/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th= link_to "Movie Title", movies_path(:sort_by=>"title"), id: @clicked["title"]
      %th= link_to "Rating", movies_path(:sort_by=>"rating"), id: @clicked["rating"]
      %th= link_to "Release Date", movies_path(:sort_by=>"release_date"), id: @clicked["release_date"]
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag 'Refresh'

= link_to 'Add new movie', new_movie_path 
